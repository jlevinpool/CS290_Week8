<h1>Welcome {{name}}, here is your To Do List!</h1>
<form method="post">
	<label for="resetForm">Not {{name}}?</label>
	<input type="submit" name="resetForm" value="Start Over"></input></br>
</form>
<fieldset>
<h2>You have {{toDoCount}} items on your to do list.</h2>
<fieldset>
	<legend>Select Location: </legend>
	<form method="post">
		{{#if stateList}}
		<label for="stateID">State: </label>
		<select name="stateID" onchange="this.form.submit()">
			<option value="" disabled selected style="display:none;">(Select)</option>
			{{#each stateList}}
				{{#if this.selected}}
					<option value="{{this.abr}}" selected>{{this.full}}</option>
				{{else}}
					<option value="{{this.abr}}">{{this.full}}</option>
				{{/if}}
			{{/each}}
		</select>
		{{/if}}
	</form>
	<form method="post">
		{{#if qSC}}
		<label for="cityID">City: </label>
		<select name="cityID" onchange="this.form.submit()">
			<option value="" disabled selected style="display:none;">(Select)</option>
			{{#each qSC}}
				{{#if this.selected}}
					<option value="{{this.id}}" selected>{{this.name}}</option>
				{{else}}
					<option value="{{this.id}}">{{this.name}}</option>
				{{/if}}
			{{/each}}
		</select>
		{{else}}
		<label>No city data availiable!</label>
		{{/if}}
	</form>
</fieldset>
<fieldset>
<legend>Add a New Task: </legend>
<form method="post">
		<label for="name">Task Name: </label>
		<input type="text" name="name" id="toDoName"></input>
		<input type="submit" name="Add Item" value="Add Item">
</form>
</fieldset>
{{#if toDo}}
<h2>Task List:</h2>
<ul>
  {{#each toDo}}
  <li>
    <strong>{{this.name}}</strong>
	<ul>  <!-- Location and Temperateure -->
		<li>Location: {{city}}, {{state}}</li>
	</ul>
    <form method="post">
      <input type="hidden" name="id" value="{{this.id}}">
      <input type="submit" name="Done" value="Mark as Done">
    </form>
  </li>
  {{/each}}
</ul>
{{/if}}
</fieldset>
</br>
<fieldset>
	<legend>Response of Cities from http://httpbin.org/post</legend>
	<p>{{httpbin}}</p>
</fieldset>

