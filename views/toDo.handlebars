<h1>Welcome {{name}}, here is your To Do List!</h1>
<form method="post">
	<label for="resetForm">Not {{name}}?</label>
	<input type="submit" name="resetForm" value="Start Over"></input>
</form>
<h2>You have {{toDoCount}} items on your to do list.</h2>
<fieldset>
	<legend>Select Location:</legend>
	<form action="/State" method="post">
		{{#if stateList}}
		<label for="stateID">State: </label>
		<select name="stateID" onchange="this.form.submit()">
			<option value="" disabled selected style="display:none;">(Select)</option>
			{{#each stateList}}
				{{#if this.selected}}
					<option value="{{this.abr}}" selected>{{this.full}}</option>
				{{else}}
					<option value="{{this.abr}}">{{this.full}}</option>
				{{/if}}
			{{/each}}
		</select>
		{{/if}}
	</form>
	<p>Test Area: </p>
	{{#if qSC}}
		<select name="cityName">
			<option value="" disabled selected style="display:none;">(Select)</option>
			{{#each qSC}}
				<option value="{{this.name}}">{{this.name}}</option>
			{{/each}}
		</select>
	{{else}}
		<p>No qSC!</p>
	{{/if}}
</fieldset>
<form method="post">
		<label for="name">Task Name: </label>
		<input type="text" name="name" id="toDoName"></input>
		<input type="submit" name="Add Item" value="Add Item">
</form>
{{#if toDo}}
<ul>
  {{#each toDo}}
  <li>
    <h3>{{this.name}}</h3>
    <form method="post">
      <input type="hidden" name="id" value="{{this.id}}">
      <input type="submit" name="Done" value="Mark as Done">
    </form>
  </li>
  {{/each}}
</ul>
{{/if}}

